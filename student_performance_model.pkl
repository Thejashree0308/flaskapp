import pickle
from sklearn.linear_model import LinearRegression
import pandas as pd

# Load your dataset and train the model
df = pd.read_csv('D:/flask/Student_Performance.csv')

# Preprocess your data and train your model
# Assuming you have already processed your data and split it into features (X) and target (y)
X = df[['Hours Studied', 'Previous Scores', 'Extracurricular Activities', 'Sleep Hours', 'Sample Question Papers Practiced']]
y = df['Performance Index']

# Train the model
model = LinearRegression()
model.fit(X, y)

# Save the trained model
with open('student_performance_model.pkl', 'wb') as f:
    pickle.dump(model, f)
